                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/ic_dice" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_reward_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="0dp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.wagerrwallet.presenter.customviews.BRText
                    android:id="@+id/tx_potential_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="11.35 WGR"
                    android:textColor="@color/black"
                    app:customTFont="CircularPro-Bold.otf"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <com.wagerrwallet.presenter.customviews.BRText
                    android:id="@+id/tx_potential"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/tx_amount"
                    android:text="@string/Dice.PotentialReward"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <com.wagerrwallet.presenter.customviews.BRText
                    android:id="@+id/tx_potential_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/tx_amount"
                    android:text="30 WGR"
                    android:textColor="@color/black"
                    app:customTFont="CircularPro-Bold.otf"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recycler_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_toolbar_layout1"
        android:layout_below="@+id/toolbar_layout"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tx_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_above="@id/bottom_toolbar_layout1"
        android:background="@color/light_gray"/>


</RelativeLayout>