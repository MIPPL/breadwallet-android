<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">


    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_timestamp"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:text="Dec 2"
        android:textColor="@color/total_assets_usd_color"
        android:textSize="12sp"
        app:customTFont="CircularPro-Book.otf" />


    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_timestamp"
        android:layout_alignLeft="@id/tx_timestamp"
        android:layout_toLeftOf="@id/tx_amount"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Awaiting confirmation"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_state"
        android:layout_alignLeft="@id/tx_state"
        android:layout_toLeftOf="@id/tx_amount"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:text="ID: T55555"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="839.30"
        android:textSize="16sp"
        android:textColor="@color/green_text"
        app:customTFont="CircularPro-Bold.otf"/>

    <ProgressBar
        android:id="@+id/tx_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_below="@id/tx_date"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-12dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressBackgroundTint="#552196f3"
        android:progressDrawable="@drawable/wallet_sync_progress_bar"
        android:progressTint="#4b77f3"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray" />

</RelativeLayout>