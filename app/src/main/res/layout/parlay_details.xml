            <com.wagerrwallet.presenter.customviews.BRText
                android:id="@+id/tx_eventdate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tx_home_1"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:text="Event date"
                android:textColor="@color/total_assets_usd_color"
                android:textSize="12sp"
                app:customTFont="CircularPro-Book.otf" />


            <com.wagerrwallet.presenter.customviews.BRText
                android:id="@+id/tx_home_1"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_eventheader_1"
                android:layout_alignLeft="@id/tx_eventheader_1"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:text="home team"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <com.wagerrwallet.presenter.customviews.BRText
                android:id="@+id/tx_away_1"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_home_1"
                android:layout_alignLeft="@id/tx_eventheader_1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingBottom="4dp"
                android:text="away team"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.wagerrwallet.presenter.customviews.BRText
                android:id="@+id/tx_odd_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@id/tx_eventdate_1"
                android:layout_toLeftOf="@id/leg_remove_1"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:text="odd"
