        <RelativeLayout
        android:id="@+id/bet_container"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/tx_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="25"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="@color/total_assets_usd_color"
            android:imeOptions="actionDone"
            android:textSize="20sp" />

        <com.wagerrwallet.presenter.customviews.BRText
            android:id="@+id/tx_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tx_amount"
            android:text="WGR"
            android:textColor="@color/total_assets_usd_color"
            android:textSize="20sp"
            android:visibility="visible" />

        <SeekBar
            android:id="@+id/bet_seekBar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:scaleY="2"
            android:scaleX="2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tx_amount" />

        <com.wagerrwallet.presenter.customviews.BRText
            android:id="@+id/tx_potential_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bet_seekBar"
            android:layout_marginTop="0dp"
            android:layout_below="@id/bet_seekBar"
            android:layout_alignParentLeft="true"
            android:text="Potential reward:"
            android:textColor="@color/total_assets_usd_color"
            android:textSize="14sp"
            android:visibility="visible"
            app:customTFont="CircularPro-Book.otf" />

        <com.wagerrwallet.presenter.customviews.BRText
            android:id="@+id/tx_potential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tx_potential_label"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/bet_seekBar"
            android:text="WGR ($)"
            android:textColor="@color/total_assets_usd_color"
            android:textSize="14sp"
            android:visibility="visible"
            app:customTFont="CircularPro-Book.otf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_below="@id/bet_seekBar"
            >

            <ImageButton
                android:id="@+id/bet_send"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_below="@id/bet_seekBar"
                android:layout_marginTop="2dp"
                android:background="@drawable/checkmark_circled" />

            <ImageButton
                android:id="@+id/bet_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/bet_seekBar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/bet_send"
                android:background="@drawable/redcross_circled" />

        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>