<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">


    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="4dp"
        android:text="Dec 2, 1:30 PM"
        android:textColor="@color/total_assets_usd_color"
        android:textSize="12sp"
        app:customTFont="CircularPro-Book.otf" />


    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_dice_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Dice bet type"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_bet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Bet = 25 WGR"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_dice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tx_dice_type"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Dice 1 = 3"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_dice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tx_dice1"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Dice 2 = 5"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_bet_amount"
        android:layout_alignLeft="@id/tx_bet_amount"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Total = 8"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_total"
        android:layout_alignLeft="@id/tx_bet_amount"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingBottom="0dp"
        android:text="Result = N/A"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.wagerrwallet.presenter.customviews.BRText
        android:id="@+id/tx_payout_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tx_timestamp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="8dp"
        android:text="839.30"
        android:textSize="16sp"
        android:textColor="@color/green_text"
        app:customTFont="CircularPro-Bold.otf"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray" />

</RelativeLayout>